set -e

LC_ALL=C
export LC_ALL

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@
sysconfdir=@sysconfdir@

usage (){
    echo -n "\
This program analyses lmdbg-run's or lmdbg-sym's output and
produces information about memory leaks.

usage:
    lmdbg-check [OPTIONS] [files...]
OPTIONS:
    -h --help                  displays this screen
    -V --version               display version
    -c --config <config_file>  sets configuration file
    -s --system-leaks          remove memory leaks only,
                               by default memory all leaks are output
"
}

version () {
    cat <<EOF
lmdbg-check @LMDBG_VERSION@
EOF
}

while test $# -ne 0; do
    case $1 in
	-h|--help)
	    usage
	    exit 0;;
	-V|--version)
	    version
	    exit 0;;
        -c|--config)
	    conf_file=$2
	    shift;;
	-s|--system-leaks)
	    system_leaks=1;;
	--)
	    shift
	    break;;
	-*)
	    echo "unknown option '$1'" 1>&2
	    exit 1;;
	*)
	    break;;
    esac
    shift
done

if test -z "$conf_file"; then
    conf_file=$HOME/.lmdbg-check

    if ! test -r "$conf_file"; then
	conf_file=$sysconfdir/lmdbg-check.conf

	if ! test -r "$conf_file"; then
	    conf_file=''
	fi
    fi
fi

remove_system_leaks () {
    @AWK@ -v conf_file="$conf_file" '
    BEGIN {
	while (0 < (ret = (getline < conf_file))){
	    sub(/#.*$/, "")

	    if ($1 == "ignore_file"){
		ignore_file [$2] = ""
		continue
	    }
	    if ($1 == "ignore_line"){
		ignore_line [$2] = ""
		continue
	    }
	    if (NF == 0){
		continue
	    }

	    print "invalid command: `" $1 "`" > "/dev/stderr"
	    exit 2
	}

	if (ret < 0){
	    print "reading error from \"" conf_file "\"" > "/dev/stderr"
	    exit 1
	}

	count = 0
	ignore = 0
    }

    function print_traceback (      i) {
	for (i=0; i < count; ++i){
	    print traceback [i]
	}
    }

    NF == 0 || /^[^ ]/ {
	if (!ignore){
	    print_traceback()
	}

	ignore = 0
	count  = 0

	if (NF == 0)
	    next
    }

    ignore != 0 {
	next
    }

    {
	traceback [count++] = $0
    }

    /^ / {
	if ($2 in ignore_line){
	    ignore = 1
	    next
	}

	sub(/:.*$/, "", $2)

	if ($2 in ignore_file){
	    ignore = 1
	    next
	}
    }
    END {
	if (!ignore){
	    print_traceback()
	}
    }' "$@"
}

#echo "conf_file='$conf_file'"
if test "_$conf_file" != "_" && ! test -r "$conf_file"; then
    echo "configuration file '$conf_file' is not readable" 1>&2
    exit 1
fi

if test "$system_leaks"; then
    if test "_$conf_file" != "_" && test -r "$conf_file"; then
	remove_system_leaks "$@"
	exit $?
    else
	echo "configuration file is not available" 1>&2
	exit 1
    fi
fi

multiline2singleline (){
    # Input:
    #   malloc/realloc/free ...
    #    address1
    #    address2
    #    address3
    # Output:
    #   malloc/realloc/free ...<SUBSEP>address1<SUBSEP>address2<SUBSEP>address3
    @AWK@ '
    NF > 0 && /^ / {
	calls = calls SUBSEP $0
	next
    }
    NF > 0 {
	if (calls){
	    print last " " calls
	    calls = ""
	}

	last = $0
    }
    END {
	if (calls){
	    print last " " calls
	    calls = ""
	}
    }
    ' "$@"
}

leaks_themself () {
    @AWK@ '
    $1 == "malloc" {
	h [$6] = $0
	next
    }

    $1 == "memalign" {
	h [$8] = $0
	next
    }

    $1 == "free" {
	delete h [$3]
	next
    }

    $1 == "realloc" {
	if ($3 == "NULL" || $3 == $8){
	    h [$8] = $0
	}else{
	    h [$8] = $0
	    delete h [$3]
	}
    }

    END {
	for (addr in h){
	    print h [addr]
	}
    }' "$@"
}

singleline2multiline () {
    # Input:
    #   malloc/realloc/free ...<SUBSEP>address1<SUBSEP>address2
    # Output:
    #   malloc/realloc/free ...
    #    address1
    #    address2
    @AWK@ '
    BEGIN {
	FS = SUBSEP
    }
    $1 ~ /^(malloc|realloc|memalign) / {
	sub(/ $/, "", $1)
	for (i=1; i <= NF; ++i){
	    print $i
	}
    }

    $1 == "free" {
	print "this should not happen" > "/dev/stderr"
	exit 1
    }' "$@"
}

multiline2singleline "$@" |
leaks_themself |
singleline2multiline
