#!/bin/sh

awk '
BEGIN {
    ok = -1 # -1 - unknown, 0 - false, 1 - true
    count = 0
}

function condition (){
    if (peak > 10000000)
	return 1
    else
	return 0

    return -1;
}

function update_skip (){
    ok = condition()

    if (ok == 1){
	for (i=0; i < count; ++i){
	    print accu [i]
	}

	count = 0
    }
}

$0 ~ /^info / {
    print $0
    next
}

$0 ~ /^ / {
    if (ok == 1){
	print
	next
    }else if (ok == 0){
	next
    }else{
	update_skip()
	next
    }
}

{
    peak = max = allocs = leaks = 0
}

/^stacktrace / {
    for (i=1; i <= NF; ++i){
	if ($i == "peak:"){
	    peak = $(i+1)
	}else if ($i == "max:"){
	    max = $(i+1)
	}else if ($i == "allocs:"){
	    allocs = $(i+1)
	}else if ($i == "leaks:"){
	    leaks = $(i+1)
	}
    }
}

{
    accu [0] = $0
    count = 1

    ok = -1
    update_skip()
}
'
