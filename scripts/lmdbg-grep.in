#!/bin/sh

set -e

invert=0
if test "_$1" = '_-v'; then
    invert=1
    shift
fi

if test $# -lt 1; then
    cat <<EOF
usage: lmdbg-grep <awk_expr> [files...]
EOF
    exit 1
fi

expr="$1"
shift

if printf "%s\n" "$expr" | grep addrline > /dev/null; then
    addrline_mode=1
else
    addrline_mode=0
fi

@AWK@ -v invert="$invert" -v addrline_mode="$addrline_mode" '
BEGIN {
    ok = -1 # -1 - unknown, 0 - false, 1 - true
    count = 0
}

function condition (){
#    print "$0=" $0
    return '"$expr"'
}

function print_accu (                   i){
    for (i=0; i < count; ++i){
	print accu [i]
    }
}

function update_skip (){
    if (addrline_mode){
	if (!/^ /)
	    return
	addrline = $0
    }else{
	if (/^ /)
	    return
    }

    if (ok != 1)
	ok = condition()

    if (addrline_mode && ok == 0)
	ok = -1
    else if (ok == 1 && !invert){
	print_accu()
	count = 0
    }
}

$0 ~ /^info / {
    print $0
    next
}

$0 ~ /^ / {
    accu [count++] = $0

    if (ok == 1){
	if (!invert)
	    print
    }else if (ok == 0){
    }else{
	update_skip()
    }

    next
}

{
    peak = max = allocs = leaks = 0
}

/^(stacktrace|malloc|calloc|realloc|(posix_)?memalign|free) / {
    for (i=1; i <= NF; ++i){
	if ($i == "peak:"){
	    peak = $(i+1)
	}else if ($i == "max:"){
	    max = $(i+1)
	}else if ($i == "allocs:"){
	    allocs = $(i+1)
	}else if ($i == "leaks:"){
	    leaks = $(i+1)
	}
    }
}

{
    if (ok != 1 && invert){
	print_accu()
    }

    accu [0] = $0
    count = 1

    ok = -1
    update_skip()
}

END {
    if (ok != 1 && invert){
	print_accu()
    }
}
' "$@"
