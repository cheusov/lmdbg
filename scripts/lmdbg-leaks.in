set -e

LC_ALL=C
export LC_ALL

sysconfdir=@sysconfdir@

usage (){
    echo -n "\
This program analyses lmdbg-run's or lmdbg-sym's output and
produces information about memory leaks.

usage:
    lmdbg-leaks [OPTIONS] [files...]
OPTIONS:
    -h --help                  displays this screen
    -V --version               display version
"
}

version () {
    cat <<EOF
lmdbg-leaks @LMDBG_VERSION@
EOF
}

while test $# -ne 0; do
    case $1 in
	-h|--help)
	    usage
	    exit 0;;
	-V|--version)
	    version
	    exit 0;;
	--)
	    shift
	    break;;
	-*)
	    echo "unknown option '$1'" 1>&2
	    exit 1;;
	*)
	    break;;
    esac
    shift
done

leaks () {
    awk '
    $1 == "malloc" {
	h [$6] = $0
	next
    }

    $1 == "memalign" {
	h [$8] = $0
	next
    }

    $1 == "free" {
	delete h [$3]
	next
    }

    $1 == "realloc" {
	if ($3 == "NULL" || $3 == $8){
	    h [$8] = $0
	}else{
	    h [$8] = $0
	    delete h [$3]
	}
	next
    }

    {
	print $0
	next
    }

    END {
	for (addr in h){
	    print h [addr]
	}
    }' "$@"
}

lmdbg-multi2single "$@" |
leaks |
lmdbg-single2multi
