set -e

. pipestatus

usage () {
    cat <<'EOF'
lalala

usage: lmdbg-sort [OPTIONS] [files...]
OPTIONS:
  -h --help                display this help
  -V --version             display version
  -f <field>               sorting key,
                           valid values are: allocs, max, peak, max.
                           This option is mandatory!
EOF
}

version (){
cat <<'EOF'
lmdbg-grep @LMDBG_VERSION@
EOF
}

while test $# -ne 0; do
    case $1 in
	-h|--help)
	    usage
	    exit 0;;
	-V|--version)
	    version
	    exit 0;;
	-f)
	    field=$2
	    shift;;
	-f*)
	    field=`echo $1 | cut -b 3-`;;
	--)
	    shift
	    break;;
	-*)
	    echo "unknown option '$1'" 1>&2
	    exit 1;;
	*)
	    break;;
    esac

    shift
done

if test -z "$field"; then
    usage
    exit 1
fi

number_first (){
    awk -v field="$field:" '
$1 == "info" {
   print 4000000000, $0
   next
}
{
   value = 0
   for (i=1; i<= NF; ++i){
      if ($i == field){
         value = $(i+1)
         break
      }
   }
   print value, $0
}
' "$@"
}

no_number (){
    sed 's/^[^ ]* //'
}

runpipe0 \
    lmdbg-m2s "$@" '|' \
    number_first '|' \
    sort -k1rn '|' \
    no_number '|' \
    lmdbg-s2m
