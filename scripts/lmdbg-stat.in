#!/bin/sh

. pipestatus

sumcounts (){
    awk '
/^info / {
    print
    next
}

/^malloc / {
    trace [$7] = 1
    ptr2trace [$6]  = $7
    ptr2size  [$6]  = $3
    allocated [$7] += $3
    total_allocated  += $3
    ++total_allocs_cnt
    next
}

/^calloc / {
    trace [$9] = 1
    bytes = $3 * $5
    ptr2trace [$8]  = $9
    ptr2size  [$8]  = bytes
    allocated [$9] += bytes
    total_allocated  += bytes
    ++total_allocs_cnt
    next
}

/^(memalign|posix_memalign) / {
    trace [$9] = 1
    ptr2trace [$8]  = $9
    ptr2size  [$8]  = $9
    allocated [$9] += $5
    total_allocated  += $5
    ++total_allocs_cnt
    next
}

/^realloc / {
    trace [$9] = 1
    ptr2trace [$8]  = $9
    ptr2size  [$8]  = $9
    allocated [$9] += $5
    total_allocated  += $5
    total_allocated              -= ptr2size [$3]
    allocated [ptr2trace [$3]] -= ptr2size [$3]
    ++total_allocs_cnt
    next
}

/^free / {
    trace [$5] = 1
    total_allocated              -= ptr2size [$3]
    allocated [ptr2trace [$3]] -= ptr2size [$3]
    ++total_free_cnt
    next
}

END {
    print "info stat total_allocated: " total_allocated
    print "info stat total_allocs_cnt: " total_allocs_cnt
    print "info stat total_free_cnt: " total_free_cnt

    for (i in trace){
	printf "malloc ( -1 ) --> -1"
	if (i in allocated)
	    printf " allocated: %s", allocated [i]
	printf " %s\n", i
    }
}
' "$@"
}

runpipe0 \
    lmdbg-multi2single "$@" '|' \
    sumcounts '|' \
    lmdbg-single2multi
